- content_for :header do
  %h1.memo_title
    = table_memo.name
    - unless table_memo.linked?
      %i.fa.fa-exclamation-triangle{ data: { toggle: "tooltip", placement: "bottom", title: "There is no linked source table." } }

  %ul.breadcrumb
    %li
      = link_to root_path do
        %i.fa.fa-home
        Home
    %li
      = link_to table_memo.database_memo.name, table_memo.database_memo
    %li.active
      = table_memo.name
