= form_for @masked_datum, html: { class: "form-horizontal" } do |f|
  .box-body
    .form-group
      = f.label :database_name, class: "col-sm-2 control-label"
      .col-sm-10= f.select :database_name, @database_name_options, {}, class: "form-control"
    .form-group
      = f.label :table_name, class: "col-sm-2 control-label"
      .col-sm-10= f.text_field :table_name, class: "form-control", placeholder: "*"
    .form-group
      = f.label :column_name, class: "col-sm-2 control-label"
      .col-sm-10= f.text_field :column_name, class: "form-control", placeholder: "password"
  .box-footer
    = f.submit class: "btn btn-primary pull-right"
