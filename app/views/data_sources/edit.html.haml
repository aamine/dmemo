- content_for :header do
  %h1.page-header Data Sources

  %ol.breadcrumb
    %li
      = link_to root_path do
        %i.fa.fa-home
        Home
    %li
      = link_to "Data Sources", data_sources_path
    %li.active
      = @data_source.name

.box
  .box-body
    = form_for @data_source do |f|
      %table.table.table-hover.table-bordered.table-striped{ role: "grid" }
        %tr
          %th Name
          %td= f.text_field(:name)
        %tr
          %th Description
          %td= f.text_field(:description)
        %tr
          %th Adapter
          %td= f.text_field(:adapter)
        %tr
          %th Host
          %td= f.text_field(:host)
        %tr
          %th Port
          %td= f.text_field(:port)
        %tr
          %th Database Name
          %td= f.text_field(:dbname)
        %tr
          %th Username
          %td= f.text_field(:user)
        %tr
          %th Password
          %td= f.text_field(:password)
        %tr
          %th Encoding
          %td= f.text_field(:encoding)
        %tr
          %td{ colspan: 2 }
            = f.submit
